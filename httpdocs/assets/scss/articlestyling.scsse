//Overwritable Colors
$bgColor: #ffffff;

$catBg: #6ca32c;
$playerAccent: #6ca32c;

$headerBg: #ffffff;
$headerLinkColor: #333333;
$headerLinkColorHover: #000000;

$darkBg: #afafaf;
$slideShowBg: rgba($catBg, 0.15);

$iconAndBorderColor: #707070;
$sectionHeaderColor: #DDD;
$borderColor: #DDD;
$darkGray: #777;

$articleTitleColor:#0090D1;

$orangeColor: #E06B15;

@import "_normalize.scss";
@import "_fontface.scss";
@import "_helpers.scss";
@import "compass/css3";
@import "_icons.scss";

#ninja{color:#000;visibility:hidden;}
body,
html{
	background: $bgColor;
	margin: 0;
	padding: 0;
}

html{
	font-family: 'bp0';

	@include respond-to(bp1){
		font-family: "bp1";
	}

	@include respond-to(bp1_5){
		font-family: "bp1_5";
	}

	@include respond-to(bp728){
		font-family: "bp728";
	}

	@include respond-to(bp2){
		font-family: "bp2";
	}

	@include respond-to(bp3){
		font-family: "bp3";
	}

	@include respond-to(bp4){
		font-family: "bp4";
	}
}

body{
	font-family: arial, sans-serif;
	background-image: none;
	background-repeat: repeat;
	margin-top: 0;

	@include respond-to(bp3){
		background-image: url('http://images.simpledish.com/articlesites/simpledish/bg.jpg');
		margin-top: -1em;
	}
}

